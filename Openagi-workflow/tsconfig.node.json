{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["vite", "node"], // Ensure both 'vite' and 'node' are included
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/*/", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}